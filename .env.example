# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend CORS Origin (your React app URL)
FRONTEND_URL=http://localhost:2000

# JWT Configuration (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h

# Signature Message (MUST match frontend exactly)
SIGNATURE_MESSAGE="Welcome to Exhibition"

# Wallet Whitelist (comma-separated lowercase addresses)
# Example: 0xabcd...1234,0xefgh...5678
# Leave empty to allow all wallets
WALLET_WHITELIST=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CSRF Configuration (generate with: openssl rand -base64 32)
CSRF_SECRET=your-csrf-secret-min-32-chars-change-in-production

# Optional: Chain Configuration
CHAIN_ID=998
RPC_URL=https://rpc.nexus.xyz

# Security Headers
HELMET_ENABLED=true

# Logging
LOG_LEVEL=info